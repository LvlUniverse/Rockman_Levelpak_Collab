{
    if doShoot
    {
        var i = fireWeapon(0.5, -25, objBlockTurret, 999, 8, 0, 0);
        if (instance_exists(i))
        {
            i.isHeld = true;
            instance_create(bboxGetXCenterObject(i), bboxGetYCenterObject(i), objExplosion);
            playSFX(sfxBallBounce);
        }
    }
}
else    //if block turret exists...
{
    //perform 'carrying' function if block is being carried
    var r = true;
    with(objBlockTurret)
    {
        if isHeld
        {
            r = false;
            xspeed = 0;
            yspeed = 0;
            image_xscale = other.image_xscale
            image_yscale = other.image_yscale;
            //super arm code
            if(!doShoot)
            {
                other.isShoot = 6;
                other.shootTimer = 0;
                blockCollision = false;
                grav = 0;
                despawnRange = -1;
                isSolid = false;
                //follow mega
                with(other)
                {
                    originToBBoxBottom = bbox_bottom - round(y);
                    originToBBoxTop = round(y) - bbox_top;
                    originToBBoxCenter = (bbox_left + bbox_right) / 2 - round(x);
                    var superArmDesiredX = x - originToBBoxCenter - (image_xscale == -1);
                    if (image_yscale == 1)
                        var superArmDesiredY = y - originToBBoxBottom;
                    else
                        var superArmDesiredY = y + originToBBoxTop - 1;
