                other.isShoot = 2;
                other.shootTimer = 0;
                y += 16 * other.image_yscale;
                shiftObject(10 * other.image_xscale, 0, true);
                //xspeed = 1.5 * other.image_xscale;
                grav = 0.4 * other.image_yscale;
                despawnRange = 4;
                isSolid = true;
                blockCollision = true;
            }
        }
    }
    
    //if a turret is already out...
    if r &amp;&amp; doShoot
    {   //try to pick up a turret nearby
        with(objBlockTurret)
