            mySolid.isMySolid = true;
            mySolid.grav = 0;
        }
        mySolid.xspeed = x - mySolid.x;
        mySolid.yspeed = (y - (extended * image_yscale)) - mySolid.y;
    }
    else if instance_exists(mySolid)    //destroy my solid if held, just in case...
        instance_destroy(mySolid);
}
